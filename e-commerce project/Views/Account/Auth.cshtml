@model e_commerce_project.ViewModel.Account.LoginViewModel
@{
	ViewData["Title"] = "Auth";
}
<link rel="stylesheet" href="~/css/registerandLogin.css">
<div class="container mt-4 pb-5">
	<!-- Table -->
	<div class="row justify-content-center">
		<div class="col-lg-6 col-md-8">
			<div class="card bg-secondary shadow border-0">
				<div class="card-header bg-transparent pb-5">
					<div class="text-muted text-center mt-2 mb-4"><small>Войдите через:</small></div>
					<div class="text-center">
						<a href="#" class="btn btn-neutral btn-icon mr-4">
							<span class="btn-inner--icon"><img src="https://raw.githack.com/creativetimofficial/argon-dashboard/master/assets/img/icons/common/github.svg"></span>
							<span class="btn-inner--text">Github</span>
						</a>
						<a href="#" class="btn btn-neutral btn-icon">
							<span class="btn-inner--icon"><img src="https://raw.githack.com/creativetimofficial/argon-dashboard/master/assets/img/icons/common/google.svg"></span>
							<span class="btn-inner--text">Google</span>
						</a>
					</div>
				</div>
				<div class="card-body px-lg-5 py-lg-5">
					<div class="text-center text-muted mb-4">
						<small>Или войдите вручную</small>
					</div>
					<form method="post" role="form">
						<div asp-validation-summary="ModelOnly" class="text-warning pb-3 ml-2"></div>
						<div class="form-group">
							<div class="input-group input-group-alternative mb-3">
								<div class="input-group-prepend">
									<span class="input-group-text"><i class="fa fa-envelope"></i></span>
								</div>
								<input asp-for="Email" class="form-control" placeholder="Email" type="email">
							</div>
						</div>
						<div class="form-group">
							<div class="input-group input-group-alternative">
								<div class="input-group-prepend">
									<span class="input-group-text"><i class="fa fa-key"></i></span>
								</div>
								<input asp-for="Password" class="form-control" placeholder="Пароль" type="password">
							</div>
						</div>
						<div class="row my-4">
							<div class="col-12">
								<div class="custom-control custom-control-alternative custom-checkbox">
									<input asp-for="RememberMe" class="custom-control-input" id="customCheckRegister" type="checkbox">
									<label class="custom-control-label" for="customCheckRegister">
										<span class="text-muted">Запомнить меня</span>
									</label>
								</div>
							</div>
						</div>

						<div class="row">
							<div class="col-12">
								<div class="text-center">
									<button type="submit" class="btn btn-primary mt-4">Войти</button>
								</div>
							</div>
							<div class="col-12">
								<div class="text-center">
									<a asp-action="Register" asp-controller="Account">Не зарегистрированы?</a>
								</div>
							</div>
						</div>
					</form>
				</div>
			</div>
		</div>
	</div>
</div>
@section Scripts {
	@{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}

